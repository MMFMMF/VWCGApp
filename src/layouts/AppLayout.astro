---
import BaseLayout from '@layouts/BaseLayout.astro';

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Assessment Tools - VWCGApp',
  description = 'Interactive assessment tools for strategic business evaluation.',
} = Astro.props;
---

<BaseLayout title={title} description={description}>
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <header class="bg-white border-b border-gray-200 sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center">
            <a href="/" class="text-2xl font-bold text-primary-600">
              VWCGApp
            </a>
          </div>
          <nav class="flex items-center gap-6">
            <a href="/" class="text-gray-600 hover:text-gray-900 transition-colors">
              Home
            </a>
            <a href="/app" class="text-gray-600 hover:text-gray-900 transition-colors">
              Tools
            </a>
          </nav>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-auto">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <p class="text-center text-gray-500 text-sm">
          Â© {new Date().getFullYear()} VWCGApp. All rights reserved.
        </p>
      </div>
    </footer>
  </div>
</BaseLayout>
